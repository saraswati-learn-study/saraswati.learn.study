{
  "dictionaries": ["project-words"],
  "dictionaryDefinitions": [
    {
      "name": "custom-words",
      "path": "./etc/words.txt",
      // Some editor extensions will use `addWords` for adding words to your personal dictionary
      "addWords": true
    }
  ],
  // Keep this in sync with SPELL_LYCHEE_FILTER_REGEX_EXCLUDE in .mega-linter.yml
  "ignorePaths": [
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    "**/.github/**",
    "**/.pnpm-lock.json",
    ".vscode",
    "megalinter",
    "package-lock.json",
    "report"
  ],
  "language": "en",
  "noConfigSearch": true,
  "version": "0.2"
}
